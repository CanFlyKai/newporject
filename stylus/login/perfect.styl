body
	background #efeff4
	.header
		background #fff
		background-size 15px
		text-align center
		height 50px
		.header-title
			color #ea5404
			font-size 20px
			line-height 50px
		.back
			background url("../../img/login/nav_back_icon@2x.png") center no-repeat
			background-size 10px
			border none
			outline none
			float left
			margin-top 15px		
	.blank-text
		color #bdbdbd
		font-size 12px
		padding-left 5%
		line-height 30px
	.info-box
		background #fff
		padding-top 10px
		padding-bottom 10px
		text-align center
		.underline
			position relative
			&:after
				content ""
				position absolute
				bottom -10px
				height 1px
				width 200%
				background #d6d7dc
				left -50%				
		.info-img
			background #878787
			width 65px
			height 65px
			margin 0 auto
			border-radius 50%
			color #fff
			font-size 12px
			line-height 65px
			text-align center
			margin-bottom 15px
		.info-text
			width 60%
			margin-top 4px
			background #efeff4
			border none
			outline none
			height 30px
			padding-left 15px
			border-radius 5px
		.smb-box
			display flex
			padding-top 20px
			.info-smb
				flex 1
				width 100px
				height 65px
				background #878787
				margin-left 10px
				margin-right 10px
				border-radius 5px
				text-align center
				line-height 65px
				font-size 12px
				color #fff
	.btn
		background #ea5404
		height 45px
		width 90%
		margin-left 5%
		margin-top 25px
		border none
		border-radius 10px
		color #fff
		font-size 18px
		outline none
			